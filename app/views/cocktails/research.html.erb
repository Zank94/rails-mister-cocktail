<div class="container">
  <p>Results for "<%= params[:research] %>"</p>
  <% @cocktails.each do |cocktail| %>
    <div class="product">
      <div class='product-upvote'>
        <div class="product-arrow"></div>
        <div class='product-count'><%= rand(0..100) %></div>
      </div>
      <% if cocktail.photo? %>
        <%= cl_image_tag cocktail.photo.path, aspect_ratio: "16:9", crop: :fill, class: "product-image hidden-xs" %>
      <% end %>
      <div class='product-body'>
        <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
      </div>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <li><a href=""><i class="fa fa-heart"></i></a></li>
        <li><a href=""><i class="fa fa-share"></i></a></li>
        <li><a href=""><i class="fa fa-star"></i></a></li>
      </ul>
    </div>
  <% end %>
</div>
