<div class="container">
  <div class="media">
    <div class="media-body">
      <div class="media-section">
        <h2>Pictures</h2>
        <%= image_tag "cocktail.jpeg" %>
      </div>
      <div class="media-section">
        <h2><%= @cocktail.name %></h2>
        <h4>List of doses</h4>
        <ul>
          <% @cocktail.doses.each do |dose| %>
           <li><%= dose.description %> of <%= dose.ingredient.name %> | <%= link_to "Delete", dose_path(dose), method: :delete %></li>
          <% end %>
        </ul>

        <hr>

        <h4>Add a new dose for <%= @cocktail.name %></h4>

        <%= render "doses/form" %>
      </div>
    </div>
  </div>
</div>
