<div class="container">
  <h2><%= @cocktail.name %></h2>
  <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
  <h4>List of doses</h4>
  <ul>
    <% @cocktail.doses.each do |dose| %>
     <li><%= dose.description %> of <%= dose.ingredient.name %> | <%= link_to "Delete", dose_path(dose), method: :delete %></li>
    <% end %>
  </ul>

  <hr>

  <h4>Add a new dose for <%= @cocktail.name %></h4>

  <%= render "doses/form" %>
</div>
